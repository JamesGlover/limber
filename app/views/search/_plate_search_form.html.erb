<%= form_for(plate_search_form, method: :get) do |f| %>
  <%= f.label :plate_purposes, 'Select plate purposes' %>
  <%= f.select :plate_purposes, options_for_select(@purpose_options, plate_search_form.plate_purposes), { include_hidden: false }, multiple: true, class: 'form-control' %>
  <%= f.label :show_my_plates_only, 'Show my plates only' %>
  <%= f.check_box :show_my_plates_only %>
  <%= f.label :include_used, 'Include used plates' %>
  <%= f.check_box :include_used %>
  <%= f.submit 'Update', class: 'btn btn-default' %>
<% end %>
