<%= page(:'creation-page') do %>
  <%= content do %>
    <h2>Baited Plate Preview</h2>
    <div>
      <div>
        <%= render partial: "plates/plate", locals: {plate_presenter: @creation_form}  %>
      </div>
    </div>
    <br/>
  <% end %>

  <%= sidebar do %>
    <%= card do %>
      <h3 class='card-header'>Instructions</h3>
      <div class='card-block'>
        <p class='card-text'>Carefully check the bait layout against your worksheet.</p>
        <p class='card-text'>Click on 'Create plate' button.</p>
      </div>
      <div class='card-block'>
        <ul id="key" class="list-group">
          <%- @creation_form.baits.each do |bait| -%>
              <li class="list-group-item">
                <div class="tube-view">
                  <div class="aliquot <%= bait_colour(bait) %>">&nbsp;</div>
                </div>
                <%= bait.bait %>
              </li>
          <%- end -%>
        </ul>
        <%= semantic_form_for(@creation_form, as: :plate, url: limber_plate_children_path(@creation_form.parent), html: {method: :post}) do |f| %>
          <%= f.inputs do %>
            <%= f.input :purpose_uuid, as: :hidden, value:@creation_form.purpose_uuid %>
            <%= f.input :parent_uuid, as: :hidden, value: @creation_form.parent_uuid %>
          <% end %>
            <%= f.submit'Create plate', class: 'btn btn-outline-primary w-100', style: 'padding: 10px' %>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>