<%= page(:creation) do %>
  <%= header do %>
    <h1>Create Tubes</h1>
  <% end %>

  <%= content do %>
    <%= semantic_form_for(@creator_form, as: :plate, url: limber_plate_tubes_path(@creator_form.parent), html: {method: :post}) do |f| %>
      <%= f.inputs do %>
        <%= f.input :parent_uuid, as: :hidden, value: @creator_form.parent_uuid %>
      <% end %>
      <%= f.buttons do %>
        <%= f.commit_button 'Create Tubes' %>
      <% end %>
    <% end %>
  <% end %>

  <%= footer %>
<% end %>

